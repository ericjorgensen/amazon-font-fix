{
    "name": "Amazon Font Fix",
    "version": "1.0",
    "description": "A fix for Amazon's horrible font change.",
    "manifest_version": 2,
    "permissions": ["tabs", "https://www.amazon.com/*"],
    "content_scripts": [
       {
          "matches": ["https://www.amazon.com/*"],
          "css": ["styles/font_override.css"]
       }
    ]
}